!!!
%html
  %head
    %meta{:"http-equiv"=>"content-type", :content=>"text/html;charset=UTF-8"}
    %title Codename: Relief
    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'blueprint/screen'
    = stylesheet_link_tag 'site'
    /[if IE]
      = stylesheet_link_tag 'blueprint/ie'

    = javascript_include_tag 'jquery-1.3.2.min'
    = javascript_include_tag 'jquery-ui-1.7.1.custom.min'
    = javascript_include_tag 'application'

  %body
    #user_nav
      -if not current_user
        =link_to "Register", new_user_path
        |
        =link_to "Login", login_path
      -else
        =link_to "Dashboard", dashboard_path
        |
        =link_to "Presses", presses_path
        |
        =link_to "Clients", companies_path
        |
        =link_to "Orders", orders_path
        |
        =link_to "PaperStocks", paper_stocks_path
        |
        =link_to "Section", sections_path
        |
        =link_to "My profile", edit_user_path(:current)
        |
        =link_to "Logout", logout_path
    %p{:style=>"color: green"}
      = flash[:notice]

    .container
      %div{:class=>"span-24", :id=>"page_content"}
        =yield
      %div{:class=>"span-24", :id=>"footer"}
        this is the footer


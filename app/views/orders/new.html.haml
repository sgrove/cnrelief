-content_for :header do
  =javascript_include_tag 'new_edit_order'
  =stylesheet_link_tag 'new_edit_order'

.page_title
  New Quote/Order

.span-24
  -form_for @order do |f|
    #tabs
      %ul
        %li
          %a{:href=>"#tabs-1"}
            Order Info
        %li
          %a{:href=>"#tabs-2"}
            Quote Details
        %li
          %a{:href=>"#tabs-3"}
            Sections
      #tabs-1
        .span-18
          #form-para
            .span-6
              =label :order, :quoted_on, "Date Quoted"
              %br
              =f.text_field :quoted_on

            .span-6
              =label :order, :ordered_on, "Date Ordered"
              %br
              =f.text_field :ordered_on

            %div{:class=>"span-6 last"}
              =label :order, :due_by, "Due by"
              %br
              =f.text_field :due_by

        .span-18
          #form-para
            .span-6
              =label :order, :csr_id, "CSR: "
              .csr_id_field
                None
              %a{:href=>"#", :id=>"csr_dialog_link", :class=>"ui-state-default selectstuff"}
                Select CSR
              =f.hidden_field :csr_id

            .span-6
              =label :order, :estimator_id, "Estimator: "
              .estimator_id_field
                None
              %a{:href=>"#", :id=>"estimator_dialog_link", :class=>"ui-state-default selectstuff"}
                Select Estimator
              =f.hidden_field :estimator_id

            %div{:class=>"span-6 last"}
              =label :order, :status, "Order Status: "
              %br
              =f.select (:status, ["quoted", "ordered"])




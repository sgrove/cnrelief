-content_for :header do
  =javascript_include_tag 'new_edit_order'

.page_title
  New Quote/Order

.span-24
  -form_for @order do |f|

    .span-18
      #form-para
        .span-6
          =label :order, :quoted_on, "Date Quoted"
          %br
          =f.text_field :quoted_on

        .span-6
          =label :order, :ordered_on, "Date Ordered"
          %br
          =f.text_field :ordered_on

        %div{:class=>"span-6 last"}
          =label :order, :due_by, "Due by"
          %br
          =f.text_field :due_by

    .span-24
      #form-para
        .span-6
          =label :order, :csr_id, "CSR: "
          .csr_id_field
            None
          %a{:href=>"#", :id=>"dialog_link", :class=>"ui-state-default ui-corner-all"}
            Select CSR
          =f.hidden_field :csr_id

        .span-6
          =label :order, :estimator_id, "Estimator: "
          .estimator_id_field
            None
          %a{:href=>"Select Estimator"}
            Select Estimator
          =f.hidden_field :estimator_id

        %div{:class=>"span-6 last"}
          =label :order, :status, "Order Status: "
          %br
          =f.select (:status, ["quoted", "ordered"])



    .span-18
      #subform-title
        Print Details

      #form-para
        .span-6
          =label :order, :finish_flat_size, "Finish Flat Size"
          %br
          =f.text_field :finish_flat_size
        %div{:class=>"span-6 last"}
          =label :order, :finish_fold_size, "Finish Fold Size"
          %br
          =f.text_field :finish_fold_size

    .span-24
      #form-para
        .span-6
          =label :order, :description, "Description"
          %br
          =f.text_area :description, :size=>"40x5"
        %div{:class=>"span-14 last"}
          .span-6
            =label :order, :quantity_ordered, "Quantity Ordered"
            %br
            =f.text_field :quantity_ordered
          %div{:class=>"span-7 last"}
            =label :order, :overs_on_shelf, "Overs on Shelf"
            %br
            =f.text_field :overs_on_shelf
          .span-6
            =label :order, :consecutive_start, "Consecutive Start"
            %br
            =f.text_field :consecutive_start
          %div{:class=>"span-7  last"}
            =label :order, :consecutive_end, "Consecutive End"
            %br
            =f.text_field :consecutive_end
    .span-24
      #form-para
        %p{:id=>"submit-button"}
          =f.submit ("Create Quote/Order")

%div{:class=>"ui-overlay"}
  %div{:class=>"ui-widget-overlay"}
  %div{:class=>"ui-widget-shadow ui-corner-all", :style=>"width: 302px; height: 152px; position: absolute; left: 50px; top: 30px;"}
%div{:style=>"position: absolute; width: 280px; height: 130px;left: 50px; top: 30px; padding: 10px;", :class=>"ui-widget ui-widget-content ui-corner-all"}

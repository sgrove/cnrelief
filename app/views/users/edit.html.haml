%h1="#{current_user.email}'s profile"

- form_for(@user) do |f|
  = f.error_messages
  = f.label :full_name, "My full name is"
  = f.text_field :full_name

  - unless @initial_run
    %p
      = f.label :address1, "Address 1"
      = f.text_field :address1
    %p
      = f.label :address2, "Address 2"
      = f.text_field :address2
    %p
      = f.label :city
      = f.text_field :city
    %p
      = f.label :zip
      = f.text_field :zip

  = f.submit 'Update'

= link_to 'Back', @user
- if @initial_run
  |
  = link_to "Nah, I'll do it later", new_campaign_path
